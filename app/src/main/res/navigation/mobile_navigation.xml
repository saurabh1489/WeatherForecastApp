<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_current">

    <fragment
        android:id="@+id/navigation_current"
        android:name="com.sample.weather.ui.weather.CurrentWeatherFragment"
        android:label="@string/title_current"
        tools:layout="@layout/fragment_current_weather" />

    <fragment
        android:id="@+id/navigation_future"
        android:name="com.sample.weather.ui.dashboard.DashboardFragment"
        android:label="@string/title_future"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.sample.weather.ui.notifications.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_notifications" />
</navigation>